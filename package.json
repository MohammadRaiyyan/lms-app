{
  "name": "lms-app",
  "version": "1.0.0",
  "description": " A simple Library Management System (LMS) implemented in TypeScript.",
  "main": "dist/index.js",
  "author": {
    "name": "Mohammad Raiyyan",
    "email": "raiyyan.work@gmail.com",
    "format": "prettier . --write"
  },
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "minify": "esbuild dist/index.js --minify --outfile=dist/index.min.js --platform=node --target=node18",
    "prepare": "husky",
    "lint": "eslint . --ext .ts --ignore-pattern '**/*.test.ts' --ignore-pattern 'dist/**'",
    "lint:fix": "eslint . --ext .ts --fix --ignore-pattern '**/*.test.ts' --ignore-pattern 'dist/**'",
    "format": "prettier . --write --ignore-path .prettierignore"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/jest": "^30.0.0",
    "esbuild": "^0.25.10",
    "eslint": "^9.36.0",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "jest": "^30.1.3",
    "jiti": "^2.5.1",
    "lint-staged": "^16.1.6",
    "prettier": "3.6.2",
    "ts-jest": "^29.4.4",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.44.0"
  },
  "private": true,
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown",
    "**/*.ts": "eslint --fix"
  }
}
